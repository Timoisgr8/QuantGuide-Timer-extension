{
  "manifest_version": 3,
  "name": "Post Detector",
  "version": "1.0",
  "description": "Logs 'Hello' on page load and detects POST requests",
  "permissions": ["webRequest", "webRequestBlocking", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}